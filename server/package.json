{
  "name": "cute-pet-escape-server",
  "version": "1.0.0",
  "description": "Colyseus multiplayer server for Cute Pet Escape game",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "loadtest": "colyseus-loadtest loadtest/example.ts --room game_room --numClients 2"
  },
  "keywords": [
    "colyseus",
    "multiplayer",
    "game server"
  ],
  "author": "Clare",
  "license": "MIT",
  "dependencies": {
    "colyseus": "^0.15.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.15.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
